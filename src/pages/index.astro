---
const INCLUDE_SDK = `<script src="https://assets.revosurge.com/js/web-tracker.js"><\/script>`;

const CONSTRUCTOR = `
const tracker = new WebTracker({
  trackerId: 'your-tracker-id',
  // env: 'prod' | 'test' | 'dev',
});
`;

const TRACK_DOWNLOAD_CLICK = `
tracker.trackDownloadClick('user_123', {
  store_type: 'App Store'
});
`;

const TRACK_REGISTER = `
tracker.trackRegister('user_123', {
  identifier: 'hashed_email_or_phone'
});
`;

const TRACK_LOGIN = `
tracker.trackLogin('user_123');
`;

const TRACK_DEPOSIT = `
tracker.trackDeposit('user_123', {
  currency: 'USDT',
  network: 'TRON',
  amount: 100
});
`;

const TRACK_ENTER_GAME = `
tracker.trackEnterGame('user_123', {
  currency: 'USDT',
  game_name: 'My Awesome Game',
  game_id: 'gamer_123',
  game_provider: 'provider_xyz'
});
`;

const TRACK_CUSTOM = `
tracker.trackCustomEvent('custom_event_type', {
  event_detail: 'value'
});
`;

const BASE_URL = import.meta.env.BASE_URL;
const FAVICON_URL = `${BASE_URL}favicon.svg`;

const constructorParams = [
  { name: 'trackerId', type: 'string', required: true, description: '分配给你的 tracker 标识，必填。' },
  { name: 'env', type: 'dev | test | prod', required: false, description: '可选，环境标识，默认 prod，可设 dev/test。' },
];

const eventFlow = [
  {
    order: 1,
    id: 'register',
    label: 'REGISTER',
    title: '注册',
    description: '绑定首个唯一用户标识，后续行为都会关联到该账号。',
    snippet: TRACK_REGISTER,
    params: [
      { name: 'user_id', type: 'string', required: true, description: '用户唯一 ID，作为第一个参数传入。' },
      { name: 'identifier', type: 'string', required: false, description: '可选，用于脱敏的邮箱或手机号哈希。' },
    ],
  },
  {
    order: 2,
    id: 'deposit',
    label: 'DEPOSIT',
    title: '充值/入金',
    description: '记录资金流入，用于转化与风控分析。',
    snippet: TRACK_DEPOSIT,
    params: [
      { name: 'user_id', type: 'string', required: true, description: '用户唯一 ID，作为第一个参数传入。' },
      { name: 'currency', type: 'string', required: true, description: '币种，如 USDT。' },
      { name: 'network', type: 'string', required: true, description: '支付或链路名称，如 TRON。' },
      { name: 'amount', type: 'number', required: true, description: '金额数值。' },
    ],
  },
  {
    order: 3,
    id: 'enter_game',
    label: 'ENTER_GAME',
    title: '进入游戏/产品核心环节',
    description: '在用户开始核心体验时打点，用于留存与活跃分析。',
    snippet: TRACK_ENTER_GAME,
    params: [
      { name: 'user_id', type: 'string', required: true, description: '用户唯一 ID，作为第一个参数传入。' },
      { name: 'currency', type: 'string', required: true, description: '选择的计价单位。' },
      { name: 'game_name', type: 'string', required: true, description: '游戏名称或展示标题。' },
      { name: 'game_id', type: 'string', required: true, description: '游戏或核心功能的内部 ID。' },
      { name: 'game_provider', type: 'string', required: true, description: '提供方或合作方名称。' },
    ],
  },
  {
    order: 4,
    id: 'login',
    label: 'LOGIN',
    title: '登录',
    description: '确认用户回访并继续同一账号的会话。',
    snippet: TRACK_LOGIN,
    params: [
      { name: 'user_id', type: 'string', required: true, description: '用户唯一 ID，作为第一个参数传入。' },
    ],
  },
  {
    order: 5,
    id: 'download_click',
    label: 'DOWNLOAD_CLICK',
    title: '点击下载',
    description: '标记用户在页面上触发的客户端下载或跳转行为。',
    snippet: TRACK_DOWNLOAD_CLICK,
    params: [
      { name: 'user_id', type: 'string', required: true, description: '用户唯一 ID。' },
      { name: 'store_type', type: 'string', required: false, description: '可选，下载渠道。例如 App Store、Play Store。' },
    ],
  },
  {
    order: 6,
    id: 'custom',
    label: 'CUSTOM_EVENT',
    title: '自定义事件',
    description: '补充业务特定行为，例如任务完成、购买道具等。',
    snippet: TRACK_CUSTOM,
    params: [
      { name: 'event_type', type: 'string', required: true, description: '自定义事件名称，放在第一个参数。' },
      { name: 'payload', type: 'object', required: false, description: '键值对形式的事件字段，作为第二个参数。' },
    ],
  },
];
---

<html lang="zh-CN">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <link rel="icon" type="image/svg+xml" href={FAVICON_URL} />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/themes/prism-tomorrow.min.css" />
  <style>
    :root {
      --bg: #0f111a;
      --panel: #15192a;
      --border: #242c44;
      --text: #f4f6ff;
      --muted: #9ea7c7;
      --accent: #6f86ff;
      --accent-2: #52d0ff;
      --radius: 12px;
      --max-width: 1080px;
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      background: var(--bg);
      color: var(--text);
      font-family: 'SF Pro Text', 'Segoe UI', system-ui, -apple-system, sans-serif;
      line-height: 1.6;
    }

    a {
      color: var(--accent-2);
    }

    .page-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1.25rem 1.5rem;
      border-bottom: 1px solid var(--border);
    }

    .brand {
      font-size: 1.1rem;
      font-weight: 700;
      letter-spacing: 0.04em;
    }

    .tag {
      padding: 0.35rem 0.75rem;
      border-radius: 999px;
      border: 1px solid var(--border);
      color: var(--muted);
      font-size: 0.85rem;
    }

    .layout {
      max-width: var(--max-width);
      margin: 0 auto;
      padding: 2rem 1.5rem 3rem;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    h1, h2, h3 {
      margin: 0 0 0.6rem;
    }

    .hero {
      padding: 1.5rem;
      background: linear-gradient(135deg, rgba(111, 134, 255, 0.18), rgba(82, 208, 255, 0.16));
      border: 1px solid rgba(111, 134, 255, 0.35);
      border-radius: var(--radius);
      box-shadow: 0 18px 38px rgba(10, 16, 40, 0.4);
    }

    .hero p {
      color: var(--text);
      margin: 0.35rem 0 0.75rem;
    }

    .hero-actions {
      display: flex;
      gap: 0.75rem;
      flex-wrap: wrap;
    }

    .cta {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.65rem 1.1rem;
      background: #0f1326;
      color: var(--text);
      border: 1px solid var(--border);
      border-radius: 10px;
      text-decoration: none;
      font-weight: 600;
    }

    .block {
      background: var(--panel);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      padding: 1.5rem;
      box-shadow: 0 10px 28px rgba(7, 12, 30, 0.35);
    }

    .block p {
      margin: 0.4rem 0 0.9rem;
      color: var(--muted);
    }

    ul.simple {
      margin: 0.25rem 0 0;
      padding-left: 1.1rem;
      color: var(--text);
      display: grid;
      gap: 0.35rem;
    }

    .code-container {
      position: relative;
      margin-top: 0.75rem;
      border-radius: 10px;
      border: 1px solid var(--border);
      background: #0f1326;
      overflow: hidden;
    }

    .code-container pre {
      margin: 0;
      padding: 1rem 1.1rem;
      overflow-x: auto;
    }

    .copy-button {
      position: absolute;
      top: 0.5rem;
      right: 0.6rem;
      border: 1px solid var(--border);
      background: rgba(111, 134, 255, 0.1);
      color: var(--text);
      border-radius: 8px;
      padding: 0.35rem 0.7rem;
      cursor: pointer;
      font-size: 0.85rem;
    }

    .params-table {
      margin-top: 0.8rem;
      border: 1px solid var(--border);
      border-radius: 10px;
      overflow: hidden;
    }

    .params-head, .params-row {
      display: grid;
      grid-template-columns: 1.1fr 0.7fr 0.9fr 2fr;
      gap: 0.75rem;
      padding: 0.75rem 1rem;
      align-items: center;
    }

    .params-head {
      background: #0f1326;
      color: var(--muted);
      font-size: 0.9rem;
      letter-spacing: 0.03em;
      text-transform: uppercase;
    }

    .params-row {
      border-top: 1px solid var(--border);
      color: var(--text);
    }

    .param-required {
      color: #85e0a3;
      font-weight: 600;
    }

    .param-optional {
      color: var(--muted);
      font-weight: 600;
    }

    .event-list {
      list-style: none;
      margin: 1rem 0 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .event-card {
      border: 1px solid var(--border);
      border-radius: var(--radius);
      padding: 1rem 1.2rem;
      background: #11162b;
      box-shadow: 0 12px 24px rgba(7, 12, 30, 0.3);
    }

    .event-header {
      display: flex;
      gap: 0.75rem;
      align-items: center;
    }

    .event-order {
      width: 34px;
      height: 34px;
      border-radius: 10px;
      border: 1px solid var(--border);
      display: inline-flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      background: rgba(111, 134, 255, 0.15);
    }

    .event-pill {
      display: inline-flex;
      padding: 0.25rem 0.55rem;
      border-radius: 999px;
      background: rgba(82, 208, 255, 0.12);
      border: 1px solid rgba(82, 208, 255, 0.3);
      color: var(--text);
      font-size: 0.85rem;
      font-weight: 600;
      letter-spacing: 0.02em;
    }

    .event-card p {
      color: var(--muted);
      margin: 0.35rem 0 0.6rem;
    }

    .tips {
      display: grid;
      gap: 0.45rem;
      padding-left: 1rem;
      color: var(--text);
    }

    @media (max-width: 720px) {
      .params-head, .params-row {
        grid-template-columns: 1fr 1fr;
        grid-template-areas:
          "name type"
          "required desc";
      }

      .params-row span:nth-child(1) { grid-area: name; }
      .params-row span:nth-child(2) { grid-area: type; }
      .params-row span:nth-child(3) { grid-area: required; }
      .params-row span:nth-child(4) { grid-area: desc; }

      .event-header {
        flex-direction: column;
        align-items: flex-start;
      }

      .hero, .block {
        padding: 1.1rem;
      }
    }
  </style>
</head>
<body>
  <header class="page-header">
    <div class="brand">RevoSurge</div>
    <div class="tag">Web Tracker SDK</div>
  </header>
  <main class="layout">
    <section class="hero">
      <h1>Web Tracker SDK 集成简表</h1>
      <p>按顺序完成三步：引入脚本 → 初始化 → 上报事件。</p>
      <div class="hero-actions">
        <a class="cta" href="#load-script">引入脚本</a>
        <a class="cta" href="#init-sdk">初始化</a>
        <a class="cta" href="#events">上报事件</a>
      </div>
    </section>

    <section class="block" id="purpose">
      <h2>SDK 作用</h2>
      <p>专为 Web 端设计，帮你快速拿到真实转化链路。</p>
      <ul class="simple">
        <li>自动采集基础事件（浏览、点击、滚动），减少手写埋点。</li>
        <li>内置 UTM / referrer 提取和唯一访客识别，定位来源和首访。</li>
      </ul>
    </section>

    <section class="block" id="load-script">
      <h2>1. 引入脚本</h2>
      <p>在页面 <code>&lt;head&gt;</code> 添加脚本标签，确保在业务代码前加载。</p>
      <div class="code-container">
        <pre class="language-html"><code class="language-html">{INCLUDE_SDK}</code></pre>
        <button class="copy-button">复制</button>
      </div>
    </section>

    <section class="block" id="init-sdk">
      <h2>2. 初始化</h2>
      <p>脚本加载后立即创建实例，填入后台分配的 <code>trackerId</code>，如需区分环境可补充 <code>env</code>。</p>
      <div class="code-container">
        <pre class="language-js"><code class="language-js">{CONSTRUCTOR}</code></pre>
        <button class="copy-button">复制</button>
      </div>
      <div class="params-table">
        <div class="params-head">
          <span>参数</span>
          <span>类型</span>
          <span>必填</span>
          <span>说明</span>
        </div>
        {constructorParams.map((param) => (
          <div class="params-row" set:key={param.name}>
            <span>{param.name}</span>
            <span>{param.type}</span>
            <span class={param.required ? 'param-required' : 'param-optional'}>{param.required ? '必填' : '可选'}</span>
            <span>{param.description}</span>
          </div>
        ))}
      </div>
    </section>

    <section class="block" id="events">
      <h2>3. 事件上报接口</h2>
      <ol class="event-list">
        {eventFlow.map((event) => (
          <li class="event-card" set:key={event.id}>
            <div class="event-header">
              <span class="event-order">{event.order}</span>
              <div>
                <span class="event-pill">{event.label}</span>
                <h3>{event.title}</h3>
              </div>
            </div>
            <div class="params-table">
              <div class="params-head">
                <span>参数</span>
                <span>类型</span>
                <span>必填</span>
                <span>说明</span>
              </div>
              {event.params.map((param) => (
                <div class="params-row" set:key={param.name}>
                  <span>{param.name}</span>
                  <span>{param.type}</span>
                  <span class={param.required ? 'param-required' : 'param-optional'}>
                    {param.required ? '必填' : '可选'}
                  </span>
                  <span>{param.description}</span>
                </div>
              ))}
            </div>
            <div class="code-container">
              <pre class="language-js"><code class="language-js">{event.snippet}</code></pre>
              <button class="copy-button">复制</button>
            </div>
          </li>
        ))}
      </ol>
    </section>

  </main>

  <script defer src="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/components/prism-core.min.js"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/components/prism-clike.min.js"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/components/prism-markup.min.js"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/components/prism-javascript.min.js"></script>
  <script>
    window.addEventListener('DOMContentLoaded', () => {
      if (window.Prism) {
        window.Prism.highlightAll();
      }

      const copyButtons = document.querySelectorAll('.copy-button');
      copyButtons.forEach((button) => {
        button.addEventListener('click', () => {
          const code = button.parentElement.querySelector('code').innerText;
          navigator.clipboard.writeText(code).then(() => {
            button.innerText = '已复制';
            setTimeout(() => {
              button.innerText = '复制';
            }, 1600);
          });
        });
      });
    });
  </script>
</body>
</html>
